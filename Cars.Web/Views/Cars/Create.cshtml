@model Car
@{
    ViewData["Title"] = "Add Car";
}

<div class="mb-4">
    <h1 class="mb-1">Add Car</h1>
    <p class="text-muted mb-0">Add a new car to your inventory</p>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-4">
        <form asp-action="Create" method="post">
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Brand" class="form-label fw-medium">Brand</label>
                    <input asp-for="Brand" class="form-control form-control-lg" placeholder="e.g. BMW" required />
                    <span asp-validation-for="Brand" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Model" class="form-label fw-medium">Model</label>
                    <input asp-for="Model" class="form-control form-control-lg" placeholder="e.g. X5" required />
                    <span asp-validation-for="Model" class="text-danger small"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Year" class="form-label fw-medium">Year</label>
                    <input asp-for="Year" class="form-control form-control-lg" type="number" placeholder="2024" required />
                    <span asp-validation-for="Year" class="text-danger small"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Price" class="form-label fw-medium">Price (â‚¬)</label>
                    <input asp-for="Price" class="form-control form-control-lg" type="number" step="0.01" placeholder="25000" required />
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Color" class="form-label fw-medium">Color</label>
                    <input asp-for="Color" class="form-control form-control-lg" placeholder="e.g. Black" required />
                    <span asp-validation-for="Color" class="text-danger small"></span>
                </div>
                <div class="col-12">
                    <label asp-for="Notes" class="form-label fw-medium">Notes</label>
                    <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Optional notes..."></textarea>
                </div>
            </div>
            <hr class="my-4" />
            <div class="d-flex gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary px-4">Create</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
