@model Car
@{
    ViewData["Title"] = "Delete Car";
}

<div class="mb-4">
    <h1 class="mb-1">Delete Car</h1>
    <p class="text-muted mb-0">Remove car from inventory</p>
</div>

<div class="card shadow-sm border-0 border-start border-4 border-danger">
    <div class="card-body p-4">
        <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
            <span class="me-2">⚠</span>
            <span>Are you sure you want to delete <strong>@Model.Brand @Model.Model</strong>? This action cannot be undone.</span>
        </div>
        <dl class="row mb-4">
            <dt class="col-sm-3 text-muted">Brand</dt>
            <dd class="col-sm-9 fw-medium">@Model.Brand</dd>

            <dt class="col-sm-3 text-muted">Model</dt>
            <dd class="col-sm-9 fw-medium">@Model.Model</dd>

            <dt class="col-sm-3 text-muted">Year</dt>
            <dd class="col-sm-9 fw-medium">@Model.Year</dd>

            <dt class="col-sm-3 text-muted">Price</dt>
            <dd class="col-sm-9 fw-medium">@Model.Price.ToString("N2") €</dd>
        </dl>
        <form asp-action="Delete" method="post" class="d-flex gap-2">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary">View Details</a>
            <button type="submit" class="btn btn-danger px-4">Delete</button>
        </form>
    </div>
</div>
