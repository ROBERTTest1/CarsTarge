@model IEnumerable<Car>
@{
    ViewData["Title"] = "Cars";
}

<div class="cars-header mb-4">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
        <div>
            <h1 class="mb-1">Cars</h1>
            <p class="text-muted mb-0">Manage your car inventory</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <span>+</span> Add Car
        </a>
    </div>
</div>

@if (Model.Any())
{
    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Brand</th>
                        <th>Model</th>
                        <th>Year</th>
                        <th class="text-end">Price</th>
                        <th>Color</th>
                        <th>Notes</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var car in Model)
                    {
                        <tr>
                            <td class="fw-medium">@car.Brand</td>
                            <td>@car.Model</td>
                            <td>@car.Year</td>
                            <td class="text-end text-nowrap">@car.Price.ToString("N2") €</td>
                            <td><span class="badge bg-secondary">@car.Color</span></td>
                            <td class="text-truncate" style="max-width: 150px;" title="@car.Notes">@(car.Notes ?? "—")</td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Details" asp-route-id="@car.Id" class="btn btn-outline-primary">Details</a>
                                    <a asp-action="Edit" asp-route-id="@car.Id" class="btn btn-outline-secondary">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@car.Id" class="btn btn-outline-danger">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="card shadow-sm border-0 text-center py-5">
        <div class="card-body">
            <p class="text-muted mb-3">No cars in your inventory yet.</p>
            <a asp-action="Create" class="btn btn-primary">Add your first car</a>
        </div>
    </div>
}
